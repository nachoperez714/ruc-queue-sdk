<!-- 				<groupId>org.projectlombok</groupId> -->
<!-- 				<artifactId>lombok-maven-plugin</artifactId> -->
<!-- 				<version>1.18.6.0</version> -->
<!-- 				<executions> -->
<!-- 					<execution> -->
<!-- 						<phase>generate-sources</phase> -->
<!-- 						<goals> -->
